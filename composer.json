{
  "name": "kronos/csp",
  "type": "library",
  "description": "A Content-Security-Policy header builder",
  "homepage": "https://github.com/kronostechnologies/kronos-csp",
  "license": "MIT",
  "keywords": [
    "kronos",
    "csp",
    "content-security-policy"
  ],
  "autoload": {
    "psr-4": {
      "Kronos\\ContentSecurityPolicy\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kronos\\Tests\\ContentSecurityPolicy\\": "tests/"
    }
  },
  "require": {
    "php": "^8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "12.3.11",
    "dealerdirect/phpcodesniffer-composer-installer": "1.1.2",
    "phpcompatibility/php-compatibility": "9.3.5",
    "vimeo/psalm": "6.13.1",
    "cyclonedx/cyclonedx-php-composer": "5.2.3",
    "squizlabs/php_codesniffer": "3.13.4",
    "kronostechnologies/php-coding-standard": "2.0.0"
  },
  "config": {
    "platform": {
      "php": "8.3.17"
    },
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "cyclonedx/cyclonedx-php-composer": true
    }
  }
}
